<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#4474A4">


        <ImageView
            android:id="@+id/img_back"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#4474A4"
            app:srcCompat="@drawable/ic_back_white"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="383dp"
            android:layout_height="74dp"
            android:layout_gravity="center"
            android:background="#4474A4"
            android:fontFamily="@font/courier_prime_regular"
            android:gravity="center"
            android:padding="16dp"
            android:text="Chi tiết đơn hàng"
            android:textColor="#ffff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="96dp"
        >

        <LinearLayout
            android:layout_width="391dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin khách hàng:"
                android:textColor="#1569AB"
                android:fontFamily="@font/courier_prime_regular"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/txtCustomerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nguyen Van A"
                android:fontFamily="@font/courier_prime_regular"
                android:textColor="#1569AB"

                android:textSize="14sp"/>

            <TextView
                android:id="@+id/txtCustomerAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/courier_prime_regular"
                android:text="Dia chi:"
                android:textColor="#1569AB"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/txtCustomerPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:fontFamily="@font/courier_prime_regular"
                android:textColor="#1569AB"
                android:textSize="14sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:padding="50dp">

        <LinearLayout
            android:layout_width="391dp"
            android:layout_height="68dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thong tin san pham:"
                android:textColor="#1569AB"
                android:fontFamily="@font/courier_prime_regular"
                android:textStyle="bold"
                android:textSize="18sp"/>


            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dia chi:"
                android:textColor="#1569AB"
                android:fontFamily="@font/courier_prime_regular"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/txtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:fontFamily="@font/courier_prime_regular"
                android:textColor="#1569AB"
                android:textSize="14sp"          />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="77dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/search_icon" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.2"
                android:orientation="vertical"
                android:background="@drawable/edit_text_border"
                android:paddingStart="10dp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên dịch vụ"
                    android:fontFamily="@font/courier_prime_regular"
                    android:textColor="#1569AB"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá: 0 VND"
                    android:fontFamily="@font/courier_prime_regular"
                    android:textSize="14sp"
                    android:textColor="#FF5722" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="83dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="151dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/courier_prime_regular"
                android:text="Số lượng" />

            <TextView
                android:id="@+id/txtQuantity"
                android:layout_width="122dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:fontFamily="@font/courier_prime_regular"
                android:gravity="right"
                android:text="So luong" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/courier_prime_regular">

            <TextView
                android:layout_width="151dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/courier_prime_regular"
                android:text="Thời gian thuê: " />

            <TextView
                android:id="@+id/txtRentalPeriod"
                android:layout_width="122dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:fontFamily="@font/courier_prime_regular"
                android:gravity="right"
                android:text="So luong" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/courier_prime_regular">

            <TextView
                android:layout_width="151dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/courier_prime_regular"
                android:text="Tổng tiền: " />

            <TextView
                android:id="@+id/txtTotal"
                android:layout_width="122dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:fontFamily="@font/courier_prime_regular"
                android:gravity="right"
                android:text="So luong" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>