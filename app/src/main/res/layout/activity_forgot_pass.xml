<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".iam.SocialRegisterActivity"
    android:orientation="vertical"
    android:layout_margin="20dp"
    >

    <ImageButton
        android:id="@+id/imgbtn1_close"
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:layout_marginLeft="310dp"
        android:backgroundTint="#FFFFFF"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/close"
        android:contentDescription="Đóng cửa sổ" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/castoro_titling_regular"
            android:text="Change Password"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/courier_prime_bold"
            android:text="Email: "
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custtomedit"
            android:padding="20dp"
            android:textSize="20sp"
            android:fontFamily="@font/courier_prime_bold"
            android:hint="Enter Email"/>

        <Button
            android:id="@+id/btnsenemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="#648BB3"
            android:fontFamily="@font/crafty_girls_regular"
            android:text="Send Request"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>