<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".iam.SocialRegisterActivity"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <ImageButton
        android:id="@+id/imgbtn1_close"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginLeft="325dp"
        android:backgroundTint="#FFFFFF"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/close"
        android:contentDescription="Đóng cửa sổ" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:fontFamily="@font/courier_prime_bold"
            android:text="Thay đổi mật khẩu"
            android:textSize="22sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/courier_prime_bold"
            android:text="Email: "
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custtomedit"
            android:padding="16dp"
            android:textSize="20sp"
            android:fontFamily="@font/courier_prime_regular"
            android:hint="Nhập Email"/>

        <Button
            android:id="@+id/btnsenemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="#648BB3"
            android:fontFamily="@font/courier_prime_regular"
            android:text="Gửi yêu cầu"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>