<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#ECF5FF">

    <TextView
        android:id="@+id/txtTitleHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chỉnh sửa bài đăng"
        android:fontFamily="@font/courier_prime_bold"
        android:textColor="#1A3A2B"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitleHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: "
                android:fontFamily="@font/courier_prime_bold"
                android:inputType="textMultiLine"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="5dp"
                android:textColor="#1569AB"
                />
            <TextView
                android:id="@+id/tvUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Người đăng: "
                android:fontFamily="@font/courier_prime_bold"
                android:inputType="textMultiLine"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="5dp"
                android:textColor="#1569AB"
                />

            <EditText
                android:id="@+id/edtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tiêu đề"
                android:fontFamily="@font/courier_prime_bold"
                android:inputType="text"
                android:padding="12dp"
                android:background="@drawable/edit_text_border" />

            <EditText
                android:id="@+id/edtServiceInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Thông tin dịch vụ"
                android:fontFamily="@font/courier_prime_bold"
                android:inputType="textMultiLine"
                android:padding="12dp"
                android:background="@drawable/edit_text_border"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/edtPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Giá"
                android:fontFamily="@font/courier_prime_bold"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:background="@drawable/edit_text_border"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/edtRentalTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Thời gian cho thuê"
                android:fontFamily="@font/courier_prime_bold"
                android:inputType="text"
                android:padding="12dp"
                android:background="@drawable/edit_text_border"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/edtAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Địa chỉ cho thuê"
                android:fontFamily="@font/courier_prime_bold"
                android:inputType="text"
                android:padding="12dp"
                android:background="@drawable/edit_text_border"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/edtContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Liên hệ"
                android:fontFamily="@font/courier_prime_bold"
                android:inputType="phone"
                android:padding="12dp"
                android:background="@drawable/edit_text_border"
                android:layout_marginTop="8dp" />

            <ImageView
                android:id="@+id/imgService"
                android:layout_width="match_parent"
                android:layout_height="141dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lưu Chỉnh Sửa"
                android:fontFamily="@font/courier_prime_bold"
                android:backgroundTint="#648BB3"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>