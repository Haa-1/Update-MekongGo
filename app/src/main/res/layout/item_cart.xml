<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <!-- 🖼 Ảnh dịch vụ -->
    <ImageView
        android:id="@+id/imgService"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:padding="10dp"
        android:src="@drawable/search_icon" />

    <!-- 📋 Thông tin dịch vụ -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3.2"
        android:orientation="vertical"
        android:background="@drawable/edit_text_border"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên dịch vụ"
            android:textColor="#1569AB"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá: 0 VND"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#03520F"
            />
    </LinearLayout>

    <!-- ❌ Nút Xóa -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@drawable/ic_delete"
            android:contentDescription="@string/delete_button_desc" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xóa"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FF2222"
            android:gravity="center" />
    </LinearLayout>

    <!-- 💰 Nút Thanh Toán -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnPay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@drawable/ic_pay"
            android:contentDescription="Thanh toán" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh toán"
            android:textStyle="bold"
            android:textColor="#118015"
            android:textSize="14sp"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>