<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="417dp"
        android:layout_height="738dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_blur" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="403dp"
        android:layout_height="661dp"
        android:background="@drawable/edit_text_border"
        android:backgroundTint="#FFFFFF"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/imgbtn_close"
            android:layout_width="56dp"
            android:layout_height="34dp"
            android:layout_marginStart="330dp"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/close"
            android:contentDescription="Đóng cửa sổ" />



        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:fontFamily="@font/courier_prime_bold"
            android:text="Đăng ký"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.23" />


        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:fontFamily="@font/courier_prime_regular"
            android:text="Gmail"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="323dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:autofillHints="emailAddress"
            android:ems="10"
            android:background="@drawable/edit_text_border"
            android:fontFamily="@font/courier_prime_regular"
            android:inputType="textEmailAddress"
            android:textSize="16sp"
            android:hint="Nhập email">
        </EditText>




        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:fontFamily="@font/courier_prime_regular"
            android:text="Mật khẩu"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_register_password"
            android:layout_width="323dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:autofillHints="password"
            android:background="@drawable/edit_text_border"
            android:ems="10"
            android:fontFamily="@font/courier_prime_regular"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:hint="Nhập mật khẩu" ></EditText>



        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:fontFamily="@font/courier_prime_regular"
            android:text="Ngày sinh"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_dob"
            android:layout_width="323dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:autofillHints="Name"
            android:background="@drawable/edit_text_border"
            android:ems="10"
            android:fontFamily="@font/courier_prime_regular"
            android:inputType="text"
            android:textSize="16sp"
            android:hint="Nhập ngày sinh">
        </EditText>


        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:fontFamily="@font/crafty_girls_regular"
            android:text="Nickname"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="323dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:autofillHints="Name"
            android:background="@drawable/edit_text_border"
            android:ems="10"
            android:fontFamily="@font/courier_prime_regular"
            android:inputType="text"
            android:textSize="16sp"
            android:hint="Nhập Nickname"/>

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="360dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#5088A8"
            android:fontFamily="@font/courier_prime_bold"
            android:text="Tiếp tục"
            android:textSize="20sp" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.994">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/courier_prime_regular"
        android:text="Bạn đã có tài khoản?"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/tv_login2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/courier_prime_bold"
        android:text=" Đăng nhập"
        android:textColor="#C75E00"
        android:textSize="15sp"
         />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>