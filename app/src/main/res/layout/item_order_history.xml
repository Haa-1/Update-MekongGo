<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgService"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/search_icon"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên dịch vụ"
                android:textColor="#1569AB"
                android:fontFamily="@font/courier_prime_bold"
                android:textSize="18sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/txtTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá: 0 VND"
                android:textSize="16sp"
                android:fontFamily="@font/courier_prime_regular"
                android:textColor="#189AB4"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/txtRentalPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian thuê: 1 ngày"
                android:textSize="14sp"
                android:fontFamily="@font/courier_prime_regular"
                android:textColor="#616161"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/txtQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng: 1"
                android:fontFamily="@font/courier_prime_regular"
                android:textSize="14sp"
                android:textColor="#616161"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#496E7C"
                android:layout_marginLeft="150dp"
                android:fontFamily="@font/courier_prime_bold"
                android:text="Chi tiết"
                android:textSize="14sp"
                app:cornerRadius="8dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>