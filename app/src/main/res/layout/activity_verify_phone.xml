<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".iam.VerifyPhoneActivity"
    android:orientation="vertical"
    android:padding="15dp"
    >
    <ImageButton
        android:id="@+id/imgbtn_close"
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:layout_marginLeft="330dp"
        android:backgroundTint="#FFFFFF"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/close"
        android:contentDescription="Đóng cửa sổ"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/courier_prime_bold"
        android:text="OTP: "
        android:textSize="16sp" />
    <EditText
        android:id="@+id/editTextCode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custtomedit"
        android:padding="10dp"
        android:hint="Enter OTP"
        android:fontFamily="@font/courier_prime_regular"

        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        >

        <Button
            android:id="@+id/buttonLognIn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#648BB3"
            android:fontFamily="@font/crafty_girls_regular"
            android:text="Login"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnResendOTP"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#0D2237"
            android:fontFamily="@font/crafty_girls_regular"
            android:text="Resend OTP"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>