<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tiêu đề lớn -->
        <TextView
            android:id="@+id/tv_guide_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hướng dẫn thanh toán"
            android:fontFamily="@font/courier_prime_bold"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="center"
            android:paddingBottom="12dp" />


        <!-- Danh sách yêu cầu -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Điền đầy đủ thông tin:"
            android:textSize="16sp"
            android:fontFamily="@font/courier_prime_bold"
            android:textStyle="bold"
            android:textColor="#000"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Cung cấp thông tin thanh toán chính xác.\n• Xác nhận số tiền thanh toán và phương thức thanh toán.
"
            android:textSize="12sp"
            android:fontFamily="@font/courier_prime_regular"
            android:textColor="#333"
            android:lineSpacingExtra="2dp"
            android:paddingBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Bấm thanh toán qua ZaloPay:"
            android:textSize="16sp"
            android:fontFamily="@font/courier_prime_bold"
            android:textStyle="bold"
            android:textColor="#000"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Chọn Thanh toán qua ZaloPay.\n• Hệ thống tự động chuyển sang ứng dụng ZaloPay để hoàn tất giao dịch.\n• Sau khi thanh toán thành công, đơn hàng sẽ được xác nhận.
"
            android:textSize="12sp"
            android:fontFamily="@font/courier_prime_regular"
            android:textColor="#333"
            android:lineSpacingExtra="2dp"
            android:paddingBottom="10dp"/>
    </LinearLayout>

</ScrollView>
