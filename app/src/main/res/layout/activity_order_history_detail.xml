<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
  >

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:background="#4474A4"
        android:gravity="center"
        android:padding="16dp"
        android:text="Chi tiết đơn hàng "
        android:fontFamily="@font/courier_prime_regular"
        android:textColor="#F6F7F8"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="96dp"
        >

        <LinearLayout
            android:layout_width="391dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin khách hàng:"
                android:textColor="#1569AB"
                android:fontFamily="@font/courier_prime_regular"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/txtCustomerName_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nguyen Van A"
                android:fontFamily="@font/courier_prime_regular"
                android:textColor="#1569AB"

                android:textSize="14sp"/>

            <TextView
                android:id="@+id/txtCustomerAddress_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/courier_prime_regular"
                android:text="Dia chi:"
                android:textColor="#1569AB"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/txtCustomerPhone_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:fontFamily="@font/courier_prime_regular"
                android:textColor="#1569AB"
                android:textSize="14sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:padding="50dp">

        <LinearLayout
            android:layout_width="391dp"
            android:layout_height="68dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thong tin san pham:"
                android:textColor="#1569AB"
                android:fontFamily="@font/courier_prime_regular"
                android:textStyle="bold"
                android:textSize="18sp"/>


            <TextView
                android:id="@+id/txtAddress_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dia chi:"
                android:textColor="#1569AB"
                android:fontFamily="@font/courier_prime_regular"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/txtPhone_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:fontFamily="@font/courier_prime_regular"
                android:textColor="#1569AB"
                android:textSize="14sp"          />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="77dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imageView_detail"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/search_icon" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3.2"
                android:background="@drawable/edit_text_border"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/txtTitle_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên dịch vụ"
                    android:textColor="#1569AB"
                    android:fontFamily="@font/courier_prime_regular"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtPrice_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá: 0 VND"
                    android:fontFamily="@font/courier_prime_regular"
                    android:textColor="#FF5722"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="131dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="151dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/courier_prime_regular"
                android:text="Số Lượng" />

            <TextView
                android:id="@+id/txtQuantity_detail"
                android:layout_width="122dp"
                android:fontFamily="@font/courier_prime_regular"
                android:layout_height="match_parent"
                android:text="So luong"
                android:layout_gravity="right"
                android:gravity="right"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:fontFamily="@font/courier_prime_regular"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="151dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/courier_prime_regular"
                android:text="Thời gian thuê: " />

            <TextView
                android:id="@+id/txtRentalPeriod_detail"
                android:layout_width="122dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/courier_prime_regular"
                android:text="So luong"
                android:layout_gravity="right"
                android:gravity="right"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/courier_prime_regular">

            <TextView
                android:layout_width="151dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/courier_prime_regular"
                android:text="Tổng tiền: " />

            <TextView
                android:id="@+id/txtTotal_detail"
                android:layout_width="122dp"
                android:layout_height="match_parent"
                android:text="So luong"
                android:fontFamily="@font/courier_prime_regular"
                android:layout_gravity="right"
                android:gravity="right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/courier_prime_regular"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Đánh giá dịch vụ:"
                android:fontFamily="@font/courier_prime_regular"
                android:textColor="#1569AB"
                android:textSize="12sp"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:isIndicator="false"
                android:numStars="5"
                android:scaleX="1.0"
                android:scaleY="1.0"
                android:stepSize="0.5" />

        </LinearLayout>


    </LinearLayout>

    <!-- 📝 Review Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp">

        <ImageView
            android:id="@+id/btnUploadImageReview"
            android:layout_width="45dp"
            android:layout_height="38dp"
            android:src="@drawable/ic_photo" />
        <EditText
            android:id="@+id/edtReview"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@android:drawable/edit_text"
            android:hint="Nhập đánh giá..."
            android:fontFamily="@font/courier_prime_regular"
            android:padding="8dp"
            android:textColor="#1569AB" />
        <ImageButton
            android:id="@+id/btnSubmitReview"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@drawable/ic_send"
            android:contentDescription="Gửi đánh giá"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_send_review"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_gallery"
        android:background="#CCCCCC"
        />

</LinearLayout>