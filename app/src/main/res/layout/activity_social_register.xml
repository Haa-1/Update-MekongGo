<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_blur" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="408dp"
        android:layout_height="674dp"
        android:background="@drawable/edit_text_border"
        android:backgroundTint="#FFFFFF"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/imgbtn_close"
            android:layout_width="56dp"
            android:layout_height="34dp"
            android:layout_marginLeft="330dp"
            android:backgroundTint="#FFFFFF"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/close"
            android:contentDescription="Đóng cửa sổ"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:fontFamily="@font/crafty_girls_regular"
            android:text="Register"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.23" />

        <LinearLayout
            android:id="@+id/ll_phone"
            android:layout_width="323dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@drawable/edit_text_border"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/phone_call" />

            <EditText
                android:id="@+id/editTextMobile"
                android:layout_width="216dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/courier_prime_regular"
                android:hint="Enter phone number"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>


        <Button
            android:id="@+id/btn_continue_phone"
            android:layout_width="319dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:backgroundTint="#648BB3"
            android:fontFamily="@font/crafty_girls_regular"
            android:text="Continue"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.479"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.653"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:id="@+id/ll_login_user"
            android:layout_width="323dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@drawable/edit_text_border"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/user" />

            <Button
                android:id="@+id/btnUser"
                android:layout_width="239dp"
                android:layout_height="50dp"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/courier_prime_regular"
                android:text="Continue with gmail"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="323dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_border"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/communication" />

            <Button
                android:id="@+id/btnFacebook"
                android:layout_width="244dp"
                android:layout_height="50dp"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/courier_prime_regular"
                android:text="Continue with Facebook"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_login_google"
            android:layout_width="323dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_border"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/google" />

            <Button
                android:id="@+id/btnGoogle"
                android:layout_width="239dp"
                android:layout_height="50dp"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/courier_prime_regular"
                android:text="Continue with Google"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="408dp"
        android:layout_height="49dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.994">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/crafty_girls_regular"
            android:text="Already have an account?"
            android:textSize="15sp"
            android:textStyle="bold" />/>

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/crafty_girls_regular"
            android:text=" Log in"
            android:textColor="#C75E00"
            android:textSize="15sp"
            android:textStyle="bold"  />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>