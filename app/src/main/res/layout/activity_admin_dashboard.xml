<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#ECF5FF">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/courier_prime_bold"
        android:gravity="center"
        android:text="Trang quản trị MekongGo"
        android:textColor="@color/blue"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.299" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnManageUsers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quản lý Người Dùng"
                android:fontFamily="@font/courier_prime_bold"
                app:icon="@drawable/ic_users"
                app:iconTint="@color/blue"
                android:textColor="@color/blue"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnManagePosts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quản lý Bài Đăng"
                app:icon="@drawable/ic_posts"
                android:fontFamily="@font/courier_prime_bold"
                app:iconGravity="textStart"
                app:iconTint="@color/blue"
                android:textColor="@color/blue"
                app:iconPadding="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginTop="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnManageAds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quản lý Quảng Cáo"
                app:icon="@drawable/ic_ads"
                android:fontFamily="@font/courier_prime_bold"
                app:iconGravity="textStart"
                app:iconTint="@color/blue"
                android:textColor="@color/blue"
                app:iconPadding="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginTop="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnManageProblem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quản lý vấn đề"
                app:icon="@drawable/ic_problem"
                android:fontFamily="@font/courier_prime_bold"
                app:iconGravity="textStart"
                app:iconTint="@color/blue"
                android:textColor="@color/blue"
                app:iconPadding="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
